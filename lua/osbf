#!/usr/bin/lua5.1

-- simple command-line client



require 'osbf'
require 'osbf.command_line'
require 'osbf.options'

local options, args = osbf.options.parse(arg)

if not options then
  io.stderr:write(args, '\n')
  os.exit(1)
end

osbf.init(options, args[1] == 'init')

osbf.command_line.run(unpack(args))